<h1>Add a movie</h1>

<%= simple_form_for [@list, @bookmark] do |f| %>

  <div class="form-inputs">
    <%= f.association :movie %>
  </div>

    <div class="form-inputs">
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.submit "Add movie" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Cancel", list_path(@list) %>
</div>
