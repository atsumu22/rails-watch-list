<div class="container">
  <h1 class="form-title">Add a movie</h1>

  <div class="form-card col-6">
    <%= simple_form_for [@list, @bookmark] do |f| %>

      <div class="form-inputs">
        <%= f.association :movie %>
      </div>

        <div class="form-inputs">
        <%= f.input :comment %>
      </div>

      <div class="form-actions">
        <%= f.submit "Add movie", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>


  <br>

  <div class="form-btn col-6">
    <%= link_to "←Cancel", list_path(@list), class: "btn btn-primary" %>
  </div>
</div>
