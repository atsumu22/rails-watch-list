<div class="card-review d-flex justify-content-between">
  <% unless @list.reviews.empty? %>
    <% @list.reviews.each do |review| %>
      <div class="flex-left">
        <ul class="list-inline">
          <% review.rating.times do %>
            <li><i class="fa-solid fa-star bg-bright"></i></li>
          <% end %>
          <% (5 - review.rating).times do %>
            <li><i class="fa-solid fa-star bg-gray"></i></li>
          <% end %>
        </ul>
        <h4><%= review.content %></h4>
      </div>
      <div class="flex-right">
        <%= link_to review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <h4>No reviews yet</h4>
  <% end %>
</div>
